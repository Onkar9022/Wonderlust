<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
<div class="col-8 offset-2">

    <h3>EDIT YOUR LISTINGS</h3>
    <form  method="POST" class="needs-validation" novalidate action="/listings/<%= listing._id %>?_method=PUT">

        <div class="mb-3">
            <label for="Title" class="form-label">Title</label>
             <input type="text" name="listing[title]"  required  class="form-control" value="<%=listing.title%>" >
              <div class="valid-feedback">Nice Title!</div>
              <div class="invalid-feedback"> Enter Valid Title</div>

        </div>
        
         <div class="mb-3">
            <label for="Description" class="form-label">Description</label>
             <textarea name="listing[discription]"  required  class="form-control"> <%= listing.description %>  </textarea>
                <div class="valid-feedback">Nice Description!</div>
              <div class="invalid-feedback"> Enter Valid Description</div>

        </div>

        <div class="mb-3">
              <label for="Image" class="form-label">Image</label>
             <input type="text" name="Listing[image]" required value="<%= listing.image.url %>" class="form-control">
              <div class="invalid-feedback"> Enter Valid Image URL</div>
        </div>
        <div class="row">
          <div class="mb-3 col-md-4" >
              <label for="Price" class="form-label">Price</label>
              <input type="number" name="listing[price]"  required  value="<%=listing.price%>" class="form-control">
               
              <div class="invalid-feedback"> Enter Valid Price</div>
        </div>
           <div class="mb-3 col-md-8">
              <label for="Country" class="form-label">Country</label>
               <input type="text" name="listing[country]"  required  value="<%=listing.country%>" class="form-control">
                  
              <div class="invalid-feedback"> Enter Valid Country</div>
        </div>
        </div>
             <div class="mb-3">
              <label for="Location" class="form-label">Location</label>
                  <input type="text" name="listing[location]"  required  value="<%=listing.location%>" class="form-control">
                     
              <div class="invalid-feedback"> Enter Valid Location</div>
        </div>
       <button class="btn btn-dark edit-btn mt-3">EDIT</button>
     
    </div>
    </div>
    </form>
    <script src="/js/script.js"></script>

